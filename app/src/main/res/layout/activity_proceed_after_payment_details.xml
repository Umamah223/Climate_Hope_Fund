<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProceedAfterPaymentDetails"
    android:orientation="vertical"
    android:background="@drawable/plant_a_tree">

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:background="@drawable/login_btn"
        android:layout_marginTop="39dp">

        <TextView
            android:id="@+id/reviewDonationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review Donation"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/card_rounded_bg"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="49dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amountdonatedheading"
                android:layout_width="156dp"
                android:layout_height="49dp"
                android:layout_marginStart="16dp"
                android:text="Amount Donated :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/amountDonatedbyUser"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:text="500"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="49dp"
            android:layout_marginTop="93dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_donatedheading"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:text="Category Donated :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_donated"
                android:layout_width="170dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:text=""
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="67dp"
            android:layout_marginTop="147dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/organizationDonatedHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Organization Donated:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/organization_donated"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@drawable/card_rounded_bg">

        <Button
            android:id="@+id/donateButton_Review"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="DONATE"
            android:textSize="18sp"
            android:layout_gravity="center"
            />

    </FrameLayout>

</LinearLayout>