<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMainPage"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <FrameLayout
        android:id="@+id/half_bg_volunteer"
        android:layout_width="415dp"
        android:layout_gravity="center"
        android:layout_height="194dp"
        android:background="@drawable/rounded_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/mwad_assessment2_app_logo" />

    </FrameLayout>

    <TextView
        android:id="@+id/heading_loginPage"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="CLIMATE HOPE FUND"
        android:textSize="16sp"
        android:gravity="center"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutUserLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:boxStrokeColor="@color/white"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:boxBackgroundMode="none">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinput_username"
            android:layout_width="366dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:hint="Username" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="366dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@drawable/login_btn"
        />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/baseline_enhanced_encryption_24"
        app:endIconDrawable="@drawable/baseline_remove_red_eye_24"
        app:boxBackgroundMode="none">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinput_password"
            android:layout_width="366dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:hint="Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="366dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@drawable/login_btn"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="login_btnClicked"
        android:layout_marginTop="37dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/login_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Forgot Password?"
        android:textSize="17dp"
        android:textStyle="bold"
        android:gravity="center"
        android:onClick="login_forgot_passwordClicked"
        android:textColor="@color/dark_green"
        android:layout_marginTop="25dp"
/>


    <View
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:background="@drawable/login_btn"
/>

    <Button
        android:id="@+id/new_member_btn"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="New Member"
        android:textAllCaps="true" />

</LinearLayout>