<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/drawerLayout"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


<!-- For the upwards navigation bar (three lines), put it in the frame layout with corner radius-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"/>

    <TextView
        android:id="@+id/heading_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="45dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Donate to fuel sustainability and combat climate change"
        android:textAllCaps="true"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/activity3_main_pic1"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/activity3_mainpic1" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heading_donation_categories"
            android:layout_width="207dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:lineHeight="18sp"
            android:text="Donation Categories"
            android:textColor="@color/dark_green"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_all_donations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="20dp"
            android:text="View All  --->"
            android:textColor="@color/dark_green"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/donation_catg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/donation_categories1_activity3" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img_2nd"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/donation_catg2"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/donation_categories2_activity3" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading_volunteer_categories"
                android:layout_width="272dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:elevation="10dp"
                android:lineHeight="18sp"
                android:text="Volunteer Organizations"
                android:textAllCaps="true"
                android:textColor="@color/dark_green"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_all_volunteer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="20dp"
                android:text="View All  --->"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_3rd"
        android:layout_width="185dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/volunteer_org1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/volunteer_cat1_activity3" />

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img_4th"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/volunteer_org2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/volunteer_cat2_activity3" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>