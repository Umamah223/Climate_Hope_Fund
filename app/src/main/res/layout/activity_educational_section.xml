<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationalSection"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <FrameLayout
        android:id="@+id/half_bg_volunteer"
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg">

        <TextView
            android:id="@+id/goBack_activity_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="&#x2190;"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/educationalArticlesHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="EDUCATIONAL ARTICLES"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/heading_edu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:text="Read Informative Articles On Climate Change"
        android:textColor="@color/black"
        android:textSize="17sp"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="317dp"
        android:layout_height="192dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/cardView_educational1"
        android:onClick="cardview1clicked"
        app:cardCornerRadius="18dp">

        <TextView
            android:id="@+id/chchange_1"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_bg"
            android:text="What is Climate Change?"
            android:layout_marginStart="2dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="305dp"
            android:layout_height="158dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="140dp"
            android:src="@drawable/climate_change_education" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_educational2"
        android:layout_width="317dp"
        android:layout_height="192dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:onClick="cardview2clicked"
        app:cardCornerRadius="18dp">

        <TextView
            android:id="@+id/chchange_2"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_bg"
            android:text="Effects of Climate Change"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="305dp"
            android:layout_height="158dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="140dp"
            android:src="@drawable/climate_change_education2" />

    </androidx.cardview.widget.CardView>
</LinearLayout>