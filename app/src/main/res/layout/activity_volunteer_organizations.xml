<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Volunteer_Organizations"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/half_bg_volunteer"
        android:layout_width="450dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:background="@color/very_dark_green">

        <TextView
            android:id="@+id/go_back_mainPage"
            android:layout_width="123dp"
            android:layout_height="53dp"
            android:layout_marginLeft="35dp"
            android:text="&lt;---"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_volunteer_org"
            android:layout_width="450dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Volunteer Organizations"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/plantATree_sv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bkg_1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:queryHint="Search Here..."
        app:searchIcon="@drawable/baseline_search_25"
        app:iconifiedByDefault="false"
        android:outlineAmbientShadowColor="@color/dark_green"
        android:layout_marginBottom="9dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview2"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_gravity="center" />

    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="224dp"
        app:cardElevation="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/dark_green"
        app:cardCornerRadius="18dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/beeah_volunteer"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEEAH Group"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="Volunteer With Beaah Group"
            android:layout_marginTop="140dp"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-->"
            android:textColor="@color/white"
            android:layout_marginTop="140dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="80dp"
            android:textSize="19sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>


