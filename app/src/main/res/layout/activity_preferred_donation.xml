<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferredDonationActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/rounded_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titlePrefeeredDonation"
            android:textSize="18sp"
            android:text="PREFERRED DONATIONS"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </FrameLayout>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerviewPreferredDonations"-->
<!--        android:layout_width="380dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="25dp" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewdonation"
        android:layout_width="374dp"
        android:layout_height="224dp"
        app:cardElevation="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="18dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/plant_a_tree_eeg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emirates Environmental Group"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <CheckBox
            android:id="@+id/checkbox_favourite_Donations"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="293dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/selector_wishlist_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            
            <TextView
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="DONATE NOW"
                android:layout_marginTop="140dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-->"
                android:textColor="@color/black"
                android:layout_marginTop="140dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="80dp"
                android:textSize="19sp"
                android:textStyle="bold"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>