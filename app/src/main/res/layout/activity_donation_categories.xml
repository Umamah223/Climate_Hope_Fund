<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationCategories"
    android:orientation="vertical"
    android:background="@drawable/donation_cat_bg">

    <TextView
        android:id="@+id/heading_categories"
        android:layout_width="296dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:elevation="7dp"
        android:gravity="center"
        android:text="DONATION CATEGORIES"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="600dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cat1"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:src="@drawable/donation_cat1_img_activity4"></ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/plant_a_tree_tv_activity4"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="40dp"
            android:text="Provide Food"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginLeft="231dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="600dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cat2"
                    android:layout_width="150dp"
                    android:layout_height="290dp"
                    android:src="@drawable/marine_conservation_bg"></ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/marine_conservation_tv_activity4"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="190dp"
            android:text="Marine Conservation"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="600dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cat3"
                    android:layout_width="330dp"
                    android:layout_height="130dp"
                    android:src="@drawable/donation_cat3_img_activity4"></ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/food_tv_activity4"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="40dp"
            android:text="Plant A Tree"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginLeft="231dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="600dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cat4"
                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:src="@drawable/donation_cat4_img_activity4"></ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="400dp"
            android:text="Mangrove Restoration"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </GridLayout>

</LinearLayout>