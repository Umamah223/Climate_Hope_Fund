<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/rounded_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_profile"
                android:layout_width="88dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:text="EDIT"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/save_profile"
                android:layout_width="88dp"
                android:layout_height="33dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="40dp"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="52dp"
            app:srcCompat="@drawable/user_profile_image" />
    </FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/username_title"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Username :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/username_editprofile"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"></TextView>

</LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="10sp"
        android:padding="3dp"
        android:text="Username, Volunteer &amp; Donation cannot be changed"
        android:textSize="16sp"
        android:translationY="-2.74sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_email_24" />

        <EditText
            android:id="@+id/email"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="mail"></EditText>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_add_24" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="phone"></EditText>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_enhanced_encryption_24" />

        <EditText
            android:id="@+id/password_user_profile"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="password"></EditText>

    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_enhanced_encryption_24" />

        <EditText
            android:id="@+id/confirm_password_up"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="confirm password"
           ></EditText>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_assured_workload_24" />

        <TextView
            android:id="@+id/organization_volunteered_userprofile"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:hint="volunteering organization"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_category_24" />

        <TextView
            android:id="@+id/category_volunteered_userprofile"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="volunteering category"
            android:gravity="center_vertical"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_attach_money_24" />

        <TextView
            android:id="@+id/amount_donated_userprofile"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="Amount Donated"
            android:gravity="center_vertical"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_volunteer_activism_24_1" />

        <TextView
            android:id="@+id/category_donated_to_userprofile"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:hint="Category Donated"
            android:gravity="center_vertical"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/login_btn"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="LOGOUT"/>

    </ScrollView>


    </LinearLayout>