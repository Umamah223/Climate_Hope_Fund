<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PlantATree"
    android:orientation="vertical"
    android:background="@drawable/plant_a_tree">

    <TextView
        android:id="@+id/go_back_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;---"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"/>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
       android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        >

    <TextView
        android:id="@+id/plant_a_tree_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant a tree "
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    </FrameLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/plantATree_sv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bkg_1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:queryHint="Search Here..."
        app:searchIcon="@drawable/baseline_search_25"
        android:outlineAmbientShadowColor="@color/dark_green"
        app:iconifiedByDefault="false"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview2"
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:layout_marginTop="40dp"
        android:background="@color/dark_green"/>


</LinearLayout>