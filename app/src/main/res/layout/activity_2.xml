<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:orientation="vertical">

    <View
        android:id="@+id/half_bg1"
        android:layout_width="432dp"
        android:layout_height="324dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-11dp"
        android:background="@color/very_dark_green" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/activity2_image1"
            android:layout_width="179dp"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rainforest_management_activity2" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cardView1"
        android:layout_toRightOf="@id/cardView1"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/cardView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="17dp"
        >

        <ImageView
            android:id="@+id/activity2_image2"
            android:layout_width="179dp"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:src="@drawable/marine_conservation_activity2" />

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/activity2_image3"
        android:layout_width="157dp"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/volcanic_activity_activity2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView2"
        android:layout_toRightOf="@id/cardView1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="17dp">

        <ImageView
            android:id="@+id/activity2_image4"
            android:layout_width="170dp"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/donation_box_activity2" />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="74dp"
        android:background="@color/grey">

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Your Donations, Our Climate Solutions"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </FrameLayout>


